<form class="ui stacked segment form" action="/addreview" method="POST">
    <h3 class='ui dividing header'> Write a Review </h3>

    <div class="field">
        <label>Island<br>
            <select class="ui fluid search dropdown" name="island">
                <option value="">Choose..</option>
                {{#each islands }}
                    <option>{{name}}</option>
                {{/each}}
            </select>
        </label>
    </div>

    <div class="field">
        <label>Rating:<br>
            <select class="ui fluid search dropdown" name="bestFor">
                <option value="">Choose..</option>
                <option>Poor</option>
                <option>Below Average</option>
                <option>Average</option>
                <option>Above Average</option>
                <option>Excellent</option>
            </select>
        </label>
    </div>

    <div class="grouped inline fields">
        <div class="field">
            <label>Review</label>
            <textarea placeholder="Review the island....." rows="7" name="review"></textarea>
        </div>
    </div>

    <button class="ui blue submit button">Submit Review</button>
</form>