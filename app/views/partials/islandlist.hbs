<!--LISTS ALL ISLANDS
    - CONTAINS FORM TO CATEGORIZE ISLANDS
    - CONTAINS FORM TO ADD ISLAND-->

<section class="ui raised segment">

    {{> categorizeislands}}

</section>

{{#each islands}}
    <div class="ui segment">

        <div class="ui segment">
    <div class="ui two column very relaxed grid">
        <div class="column">
            <h3 class="ui block header">
                {{name}}
            </h3>
            <div class="ui horizontal segments">
                <div class="ui segment">
                    <p><b>Area (m2): </b>{{area}}</p>
                </div>
                <div class="ui segment">
                    <p><b>Location: </b>{{category}}</p>
                </div>
                <div class="ui segment">
                    <p><b>Added By: </b>{{addedBy.firstName}} {{addedBy.lastName}}</p>
                </div>
            </div>
            <div class="ui horizontal segments">
                <div class="ui segment">
                    <p><b>Longitude: </b>{{location.longitude}}</p>
                </div>
                <div class="ui segment">
                    <p><b>Latitude: </b>{{location.latitude}}</p>
                </div>

            </div>
            <div class="ui segment">
                <p><b>Description: </b>{{{description}}}</p>
            </div>
            <div class="ui horizontal segments">
                <div class="ui center aligned segment">
                    <a href=/islandlist/deleteisland/{{id}}" class="ui red icon button">
                        <i class="large icon trash"></i>
                    </a>
                </div>
                <div class="ui center aligned segment">
                    <a href=/islandlist/showisland/{{id}}" class="ui green icon button">
                    <i class="icon large info circle"></i>
                </a>
                </div>
                <div class="ui center aligned segment">
                    {{> uploadpicture}}
                </div>
            </div>
        </div>
        <div class="column">

                {{#each pictures}}
                    <div class="ui animated button" tabindex="0">
                        <div class="visible content">
                            <a  class="ui centered image" href={{img}} >
                                <img src={{img}} >
                            </a>
                        </div>
                        <div class="hidden content">
                            <a  href="/deletepicture/{{island.id}}/{{id}}" class="ui red icon button">
                                <i class="centre aligned trash icon"></i>
                            </a>
                        </div>
                    </div>
                {{/each}}


        </div>

    </div>




</div>
        <div class="ui horizontal segments">
            <iframe
                    width="100%"
                    height="400px"
                    frameborder="yes"
                    scrolling="yes"
                    marginheight="0"
                    marginwidth="0"
                    src="https://maps.google.com/maps?q={{location.longitude}},{{location.latitude}}&hl=es;z=14&amp;output=embed"
            >
            </iframe>
            <br />


        </div>
    </div>

{{/each}}


<section class="ui raised segment">

    {{> addisland }}


</section>


